local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")

-- Hàm giết tất cả các Titan trong game
local function killAllTitans()
    -- Duyệt qua tất cả các đối tượng trong Workspace
    for _, object in pairs(game.Workspace:GetChildren()) do
        -- Kiểm tra nếu đối tượng là Titan (có thể kiểm tra tên hoặc loại đối tượng)
        if object:IsA("Model") and object:FindFirstChild("Humanoid") then
            local humanoid = object:FindFirstChild("Humanoid")
            -- Kiểm tra nếu đối tượng có tên là Titan (có thể thay đổi tên tùy thuộc vào game)
            if object.Name:match("Titan") or object.Name:match("Eren") then
                -- Giảm sức khỏe Titan xuống 0, làm cho Titan chết ngay lập tức
                humanoid.Health = 0
                print(object.Name .. " đã bị giết!")
            end
        end
    end
end

-- Kiểm tra khi người chơi nhấn chuột trái để giết tất cả Titan
game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end

    -- Nếu người chơi nhấn chuột trái, gọi hàm killAllTitans
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        killAllTitans()
    end
end)

-- Hoặc tự động giết Titan sau một khoảng thời gian (ví dụ: mỗi giây)
while true do
    wait(1)
    killAllTitans()
end
